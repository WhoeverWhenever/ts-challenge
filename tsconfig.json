{
  "compilerOptions": {
    "target": "ES5",
    "module": "ES6",
    "lib": [
      "dom",
      "es6"
    ],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "experimentalDecorators": true
  }
}